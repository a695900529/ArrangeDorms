<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/activity_questionnaire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.com.arrangedorms.arrangedorms.activity.QuestionnaireActivity">

        <RadioGroup
            android:id="@+id/rg_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.你喜欢看NBA还是喜欢看CBA？"/>

            <RadioButton
                android:id="@+id/rb_one_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NBA"/>
            <RadioButton
                android:id="@+id/rb_one_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CBA"/>

        </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_one"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.你是男的还是女的？"/>

        <RadioButton
            android:id="@+id/rb_two_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男 "/>
        <RadioButton
            android:id="@+id/rb_two_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女 "/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_two"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.吴彦祖和陈冠希谁帅？"/>

        <RadioButton
            android:id="@+id/rb_three_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴彦祖"/>
        <RadioButton
            android:id="@+id/rb_three_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈冠希"/>

    </RadioGroup>


    <Button
        android:id="@+id/btn_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="确定"/>



</RelativeLayout>
</ScrollView>
